<table>
    <thead>
        <tr>
            <th>Author</th>
            <th>Title</th>
            <th>Desc</th>
            <th colspan="3">Action</th>
            </tr>
        </thead>

    <tbody>

        <% @articles.each do |article| %>
        <tr>
            <td>Articles by <%= article.user.username if article.user %></td>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
             <td><%= link_to 'Show', article_path(article) %></td>
            <td><%= link_to 'Edit', edit_article_path(article) %></td>

        <td><%= link_to 'Delete', article_path(article.id), data: { turbo_method: :delete , turbo_confirm: "Are you sure?" }
        %></td>        </tr>
              <% end %>
        </tbody>
    </table>