<table border="2px";>
    <thead>
        <tr>
            <th>Author</th>
            <th>Title</th>
            <th>Desc</th>
            <th colspan="3">Action</th>
            <th>Created</th>
            <th>Updated</th>
            </tr>
        </thead>

    <tbody>

        <% @articles.each do |article| %>
        <tr>
            <% if article.user %>
            <td>Articles by <%= link_to article.user.username, user_path(article.user) %></td>
            <% end %>
            <td><%= article.title %></td>
            <td><%= article.description %></td>
             <td><%= link_to 'Show', article_path(article) %></td>
            <td><%= link_to 'Edit', edit_article_path(article) %></td>
        <td><%= link_to 'Delete', article_path(article.id), data: { turbo_method: :delete , turbo_confirm: "Are you sure?" }
        %></td> 
        <td><small><%= time_ago_in_words(article.created_at)%> ago</small></td>
        <td><small><%= time_ago_in_words(article.updated_at)%> ago</small></td>
        
               </tr>
              <% end %>
        </tbody>
    </table> 